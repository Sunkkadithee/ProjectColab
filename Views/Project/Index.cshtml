@model List<Project>
@{
    //razor block
    ViewData["Tille"] = "Projects";
}

@if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var project in Model)
                 { <tr>
                      <td>@project.ProjectId</td>
                      <td>@project.Name</td>
                      <td>@project.Description</td>
                   </tr>
                  }
            </tbody>
        </table>
    }
    else
    {
        <p>No projects availble</p>
    }